<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <h2 class="text-center">Sign in</h2>
    <div>
      <img class="img-circle center-block img-no-padding img-responsive" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" alt="">
      <br />
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, hide_label: true, autofocus: true, placeholder: "Email", class: 'form-control' %>
        <br />
        <%= f.password_field :password, hide_label: true, placeholder: "Password", autocomplete: "off", class: 'form-control' %>
        <br />
        <%= f.submit "Sign in", class: 'btn btn-lg btn-block btn-success' %>
      <% end %>
    </div>
  </div>
</div>
